<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Content</th>      
      <th>Image</th>
      <th>Is stylist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user.email %></td>
        <td><%= post.content %></td>        
        <td><%= post.image %></td>
        <td><%= post.is_stylist %></td>
        <td><%= link_to 'Show', post %></td>
        <% if current_user.can_update?(post) %>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <% end %>
        <% if current_user.can_destroy?(post) %>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>

